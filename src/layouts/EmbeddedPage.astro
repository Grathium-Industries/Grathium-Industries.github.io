---
import CookieConsent from "../components/cookieConsent/CookieConsent.astro";

const { title, src } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <main>
        <iframe
            src={src}
            style="
                position: absolute;
                top: 0px;
                left: 0px;
                width: 100%;
                height: 100%;
                border: none;
            "
        ></iframe>
    </main>

    <footer>
      <CookieConsent />
    </footer>
</body>
