# Configuration for known file extensions
[*.{json,xml,html,ts,scss,sh,astro,md,mdx}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,xml}]
indent_size = 2

# Do not configure editor for libs and autogenerated content
[*.{css,js,md}]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = false
trim_trailing_whitespace = false

# do not apply config to top level files
[google304f0239ca9ac4fc.html,LICENSE]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = false
trim_trailing_whitespace = false
